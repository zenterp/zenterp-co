<%= render partial: 'training/resources/navigation' %>

<div class='span12' style='width:100%'>
  <section class='span4'>
    <div class='well'>
      <%= image_tag 'peter_cooper.png', style:'float:right;vertical-align:bottom;clear:both' %>
      <h1>HTML5 Weekly</h1>

      <p>curated by Peter Cooper</p>

      <div style='width:100%;display:block;clear:both'></div>
    </div>
  </section>

  <section class='span4'>
    <div class='well'>
      <%= image_tag 'peter_cooper.png', style:'float:right;vertical-align:bottom;clear:both' %>
      <h1>Ruby Weekly</h1>

      <p>curated by Peter Cooper</p>

      <div style='width:100%;display:block;clear:both'></div>
    </div>

    <ul style='list-style:none; margin-left:0px'>
      <% @ruby_weekly_newsletters.each do |archive, links| %>
        <li style='padding:1em;border:1px solid #ccc'>
          <span style='float:right'>
            <%= links.count %> links
          </span>
          <%= link_to "##{archive.split('archive/')[1].gsub('.html','')}", archive, style: 'font-color:red;font-size:200%' %><br/>

          <% links.each do |link| %>
            <%= link_to link['text'], link['link'] %> | 
          <% end %>
        </li>
      <% end %>
    </ul>

  </section>

  <section class='span4'>
    <div class='well'>
      <%= image_tag 'peter_cooper.png', style:'float:right;vertical-align:bottom;clear:both' %>
      <h1>Javascript Weekly</h1>

      <p>curated by Peter Cooper</p>

      <div style='width:100%;display:block;clear:both'></div>
    </div>

  </section>

</div>